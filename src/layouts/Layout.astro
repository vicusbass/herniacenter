---
import { ClientRouter } from 'astro:transitions';
import SpeedInsights from '@vercel/speed-insights/astro';

import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import StickyWhatsApp from '../assets/sticky-whatsapp.svg';
import '../styles/global.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="ro">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Hernia Center - chirurgie minim invazivÄƒ a herniilor" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ClientRouter />
    <SpeedInsights />
  </head>
  <body class="flex min-h-screen flex-col font-sans">
    <Header />
    <main class="flex-1">
      <slot />
    </main>
    <Footer />

    <!-- Fixed WhatsApp button -->
    <div class="fixed right-6 bottom-6 z-50 md:right-18">
      <a
        href="https://wa.me/40744123456"
        class="block transition-transform hover:scale-105"
        aria-label="Contact WhatsApp"
      >
        <StickyWhatsApp class="h-12 w-12 md:h-16 md:w-16" />
      </a>
    </div>
  </body>
</html>

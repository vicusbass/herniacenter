<Layout title="Hernia Center - Chirurgie minim invazivă a herniilor">
  <!-- Hero Section -->
  <section class="max-w-full px-0">
    <!-- Row 1 -->
    <div class="grid grid-cols-8">
      <div class="aspect-square"></div>
      <div class="border-custom aspect-square border-r border-b border-l"></div>
      <div class="border-custom flex aspect-square items-center justify-center border-r border-b">
        <h1 class="px-4 text-center text-4xl leading-tight font-bold">
          chirurgia<br />
          minim invazivă<br />
          a herniilor
        </h1>
      </div>
      <div class="border-custom aspect-square border-r border-b"></div>
      <div class="border-custom aspect-square border-r border-b"></div>
      <div class="border-custom aspect-square border-r border-b"></div>
      <div class="border-custom aspect-square border-r border-b"></div>
      <div class="aspect-square"></div>

---
import { Image } from 'astro:assets';
import { Icon } from 'astro-icon/components';

import LocationMap from '../assets/location.png';
---

<footer class="bg-white">
  <div class="w-full py-20">
    <!-- Desktop Layout - 8 column grid -->
    <div class="hidden gap-0 md:grid md:grid-cols-8">
      <!-- Empty left column -->
      <div class="col-span-1"></div>

      <!-- Main content - 6 columns -->
      <div class="border-custom col-span-6 flex gap-0 border-t">
        <!-- Left side - 2x2 grid for navigation links (takes about 1/3 of space) -->
        <div class="grid w-1/3 grid-cols-2 gap-0 self-start pt-20">
          <div
            class="border-custom flex aspect-square items-center border-t border-r border-b border-l"
          >
            <ul class="space-y-2 pl-6">
              <li>
                <a href="#" class="text-sm transition-colors hover:text-blue-700">Spitalul</a>
              </li>
              <li>
                <a href="#" class="text-sm transition-colors hover:text-blue-700">Despre Dr. Trif</a
                >
              </li>
              <li>
                <a href="#" class="text-sm transition-colors hover:text-blue-700">Intervenții</a>
              </li>
            </ul>
          </div>
          <div class="border-custom flex aspect-square items-center border-t border-r border-b">
            <ul class="space-y-2 pl-6">
              <li>
                <span class="text-sm">Strada Principală</span>
              </li>
              <li>
                <span class="text-sm">Suceagu</span>
              </li>
              <li><span class="text-sm">407062, Cluj Napoca</span></li>
            </ul>
          </div>
          <div class="border-custom flex aspect-square items-center border-r border-b border-l">
            <ul class="space-y-2 pl-6">
              <li>
                <a href="#" class="text-sm transition-colors hover:text-blue-700">Recenzii</a>
              </li>
              <li>
                <a href="#" class="text-sm transition-colors hover:text-blue-700">Blog</a>
              </li>
              <li>
                <a href="#" class="text-sm transition-colors hover:text-blue-700">Contact</a>
              </li>
            </ul>
          </div>
          <div class="border-custom flex aspect-square items-center border-r border-b">
            <div class="flex flex-col space-y-2 pl-6">
              <a
                href="#"
                class="flex h-6 w-6 items-center justify-center transition-opacity hover:opacity-80"
              >
                <Icon name="mdi:whatsapp" class="h-5 w-5" />
              </a>
              <a
                href="#"
                class="flex h-6 w-6 items-center justify-center transition-opacity hover:opacity-80"
              >
                <Icon name="mdi:facebook" class="h-5 w-5" />
              </a>
              <a
                href="#"
                class="flex h-6 w-6 items-center justify-center transition-opacity hover:opacity-80"
              >
                <Icon name="mdi:instagram" class="h-5 w-5" />
              </a>
            </div>
          </div>
        </div>

        <!-- Right side - Map taking remaining space (4 columns) -->
        <div class="h-fit w-2/3 self-start overflow-hidden pt-20">
          <Image
            src={LocationMap}
            alt="Locația Hernia Center pe hartă - Medicover Hospital Baciu"
            class="aspect-[2/1] w-full object-cover"
            width={800}
            height={400}
          />
        </div>
      </div>

      <!-- Empty right column -->
      <div class="col-span-1"></div>
    </div>

    <!-- Mobile Layout -->
    <div class="md:hidden">
      <!-- Map first - full width -->
      <div class="h-64 w-full overflow-hidden">
        <Image
          src={LocationMap}
          alt="Locația Hernia Center pe hartă - Medicover Hospital Baciu"
          class="h-full w-full object-cover"
          width={800}
          height={400}
        />
      </div>

      <!-- 2x2 grid of square cells -->
      <div class="grid grid-cols-2 gap-0">
        <div
          class="border-custom flex aspect-square items-center border-t border-r border-b border-l"
        >
          <ul class="space-y-2 pl-6">
            <li>
              <a href="/spital" class="text-sm transition-colors hover:text-blue-700">Spitalul</a>
            </li>
            <li>
              <a href="/despre" class="text-sm transition-colors hover:text-blue-700"
                >Despre Dr. Trif</a
              >
            </li>
            <li>
              <a href="/interventii" class="text-sm transition-colors hover:text-blue-700"
                >Intervenții</a
              >
            </li>
          </ul>
        </div>
        <div class="border-custom flex aspect-square items-center border-t border-r border-b">
          <ul class="space-y-2 pl-6">
            <li>
              <span class="text-sm">Strada Principală</span>
            </li>
            <li>
              <span class="text-sm">Suceagu</span>
            </li>
            <li><span class="text-sm">407062, Cluj Napoca</span></li>
          </ul>
        </div>
        <div class="border-custom flex aspect-square items-center border-r border-b border-l">
          <ul class="space-y-2 pl-6">
            <li>
              <a href="/#recenzii" class="text-sm transition-colors hover:text-blue-700">Recenzii</a
              >
            </li>
            <li>
              <a href="/blog" class="text-sm transition-colors hover:text-blue-700">Blog</a>
            </li>
            <li>
              <a href="/contact" class="text-sm transition-colors hover:text-blue-700">Contact</a>
            </li>
          </ul>
        </div>
        <div class="border-custom flex aspect-square items-center border-r border-b">
          <div class="flex flex-col space-y-2 pl-6">
            <a
              href="#"
              class="flex h-6 w-6 items-center justify-center transition-opacity hover:opacity-80"
            >
              <Icon name="mdi:whatsapp" class="h-5 w-5" />
            </a>
            <a
              href="#"
              class="flex h-6 w-6 items-center justify-center transition-opacity hover:opacity-80"
            >
              <Icon name="mdi:facebook" class="h-5 w-5" />
            </a>
            <a
              href="#"
              class="flex h-6 w-6 items-center justify-center transition-opacity hover:opacity-80"
            >
              <Icon name="mdi:instagram" class="h-5 w-5" />
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</footer>

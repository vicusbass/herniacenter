---
export interface Props {
  text: string;
  icon?: any;
  class?: string;
}

const { text, icon: Icon, class: className = '' } = Astro.props;
---

<button
  class={`h-16 w-60 px-9 rounded-4xl flex items-center bg-main-btn text-[30px] leading-[40px] font-medium text-white transition-colors hover:opacity-90 ${className}`}
>
  {Icon && <Icon class="mr-4 h-9 w-9" />}
  <span class="mt-[-4px]">{text}</span>
</button>
